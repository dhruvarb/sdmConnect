<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>sdmConnect - <%= resource.title %></title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 font-sans text-white h-screen flex flex-col">
    <!-- Navbar -->
    <nav class="bg-gray-800 p-4 shadow-md">
      <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-white text-3xl font-semibold hover:text-blue-500">sdmConnect</a>
        <ul class="flex space-x-6 text-lg">
          <li><a href="/pages/upload" class="hover:text-blue-500">Upload</a></li>
          <li><a href="#" class="hover:text-blue-500">Find</a></li>
          <li><a href="#" class="hover:text-blue-500">Profile</a></li>
          <li><a href="#" id="logout" class="hover:text-blue-500">Logout</a></li>
        </ul>
      </div>
    </nav>

    <!-- Main Content Section -->
    <section class="max-w-7xl mx-auto p-8 bg-gray-800 rounded-lg shadow-lg mt-8 flex-1">
      <div class="flex flex-col lg:flex-row items-center justify-between space-y-6 lg:space-y-0">

        <!-- Owner Profile Section -->
        <div class="flex flex-col items-center space-y-4 md:space-y-6 w-full lg:w-1/3">
          <!-- Owner Avatar -->
          <div class="w-32 h-32 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full overflow-hidden shadow-lg">
            <img src="<%= resource.owner.avatar %>" alt="Owner Avatar" class="w-full h-full object-cover">
          </div>
          <div class="text-center">
            <h3 class="text-2xl font-semibold text-white"><%= resource.owner.fullName %></h3>
            <p class="text-sm text-gray-400">@<%= resource.owner.username %></p>
          </div>
          
        </div>

        <!-- Resource Details Section -->
        <div class="w-full lg:w-2/3 space-y-6">
          <!-- Title & Description -->
          <div class="space-y-4">
            <h2 class="text-3xl font-semibold text-blue-400"><%= resource.title %></h2>
            <p class="text-lg text-gray-300"><%= resource.description %></p>
          </div>

          <!-- Resource Info: Semester and Branch -->
          <div class="flex space-x-8">
            <div class="flex items-center space-x-2 text-gray-400">
              <span class="text-lg font-semibold">Semester:</span>
              <span class="text-lg text-white"><%= resource.semester %></span>
            </div>
            <div class="flex items-center space-x-2 text-gray-400">
              <span class="text-lg font-semibold">Branch:</span>
              <span class="text-lg text-white"><%= resource.branch %></span>
            </div>
          </div>

          <!-- Action Buttons (Download / Open in Browser) -->
          <div class="flex space-x-6 justify-center">
            <a href="<%= resource.file %>" class="bg-blue-500 text-white py-3 px-6 rounded-full text-lg hover:bg-blue-600 transition duration-300 w-full md:w-auto text-center">
              <i class="fas fa-download mr-2"></i> Download Resource
            </a>
            <a href="<%= resource.file %>" target="_blank" class="bg-gray-700 text-white py-3 px-6 rounded-full text-lg hover:bg-gray-800 transition duration-300 w-full md:w-auto text-center">
              <i class="fas fa-external-link-alt mr-2"></i> Open in Browser
            </a>
          </div>
        </div>
      </div>

      <!-- Blocked Resource Warning (if applicable) -->
      <% if (resource.isBlocked) { %>
        <div class="bg-red-500 text-white p-6 mt-8 rounded-lg text-center">
          <h3 class="text-2xl font-semibold">This resource has been blocked!</h3>
          <p class="text-lg mt-4">This resource is no longer available for download.</p>
        </div>
      <% } %>

      <!-- Created/Updated Dates -->
      <div class="text-center mt-8 text-gray-400">
        <p>Created on: <%= new Date(resource.createdAt).toLocaleDateString() %></p>
        <p>Last Updated on: <%= new Date(resource.updatedAt).toLocaleDateString() %></p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-center text-gray-400 py-6 mt-8">
      <p>&copy; 2024 sdmConnect | All Rights Reserved</p>
    </footer>

    <!-- Logout Handling (JavaScript) -->
    <script>
      const logoutLink = document.getElementById("logout");

      logoutLink?.addEventListener("click", async function (event) {
        event.preventDefault(); // Prevent the default action of the link

        try {
          const response = await fetch('/api/v1/users/logout', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              // If you're using the accessToken in a header, make sure it is sent
              'Authorization': `Bearer ${document.cookie.accessToken}`,
            },
            credentials: 'include',
          });

          if (response.ok) {
            window.location.href = '/pages/login?message=Successfully Logged Out'; // Redirect to login
          } else {
            alert("Logout failed");
          }
        } catch (error) {
          console.error("Logout error:", error);
          alert("An error occurred during logout. Please try again.");
        }
      });
    </script>
  </body>
</html>
