<link rel="stylesheet" href="/styles/notyf.min.css" />
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css"
/>
<script src="/scripts/register.js" type="module" defer></script>
<!-- Navbar -->
<nav class="bg-gray-800 p-4">
  <div class="main-container flex justify-between items-center">
    <a href="#" class="text-white text-2xl font-semibold">sdmConnect</a>
    <!-- Desktop Menu -->
    <div class="hidden md:flex space-x-6">
      <a href="/" class="text-white hover:text-blue-400">Home</a>
    </div>

    <!-- Hamburger Menu -->
    <div class="md:hidden">
      <button class="btn btn-ghost text-white" id="menu-toggle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="p-4 space-y-2">
      <a href="#home" class="block text-white hover:text-blue-400">Home</a>
    </div>
  </div>
</nav>

<section class="py-16 bg-gray-800">
  <div class="max-w-3xl mx-auto bg-gray-700 p-8 sm:p-12 rounded-lg shadow-xl">
    <h2 class="text-3xl font-bold text-white mb-8 text-center">
      Create an Account
    </h2>

    <form
      action="/api/v1/users/register"
      method="POST"
      enctype="multipart/form-data"
      class="space-y-6"
    >
      <!-- Full Name Field -->
      <div class="space-y-2">
        <label for="fullname" class="text-lg text-gray-300">Full Name</label>
        <input
          type="text"
          name="fullName"
          placeholder="Full Name"
          id="fullname"
          class="input input-bordered w-full text-white bg-gray-600 rounded-lg p-4 focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          required
        />
      </div>

      <!-- Email Field -->
      <div class="space-y-2">
        <label for="email" class="text-lg text-gray-300">Email</label>
        <input
          type="email"
          name="email"
          placeholder="Email"
          id="email"
          class="input input-bordered w-full text-white bg-gray-600 rounded-lg p-4 focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          required
        />
      </div>
      <!-- Username Field -->
      <div class="space-y-2">
        <label for="username" class="text-lg text-gray-300">Username</label>
        <input
          type="username"
          name="username"
          placeholder="Username"
          id="username"
          class="input input-bordered w-full text-white bg-gray-600 rounded-lg p-4 focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          required
        />
      </div>

      <!-- Password Field -->
      <div class="space-y-2">
        <label for="password" class="text-lg text-gray-300">Password</label>
        <input
          type="password"
          name="password"
          placeholder="Password"
          id="password"
          class="input input-bordered w-full text-white bg-gray-600 rounded-lg p-4 focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          required
        />
      </div>

      <!-- Confirm Password Field -->
      <div class="space-y-2">
        <label for="confirm_password" class="text-lg text-gray-300"
          >Confirm Password</label
        >
        <input
          type="password"
          name="confirm_password"
          placeholder="Confirm Password"
          id="confirm_password"
          class="input input-bordered w-full text-white bg-gray-600 rounded-lg p-4 focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          required
        />
      </div>

      <!-- Profile Picture Upload -->
      <div class="space-y-2">
        <label for="profile_pic" class="text-lg text-gray-300"
          >Profile Picture</label
        >
        <input
          type="file"
          name="avatar"
          accept="image/*"
          id="profile_pic"
          class="file-input file-input-bordered w-full text-white bg-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          required
        />
      </div>

      <!-- Register Button -->
      <div>
        <button
          type="submit"
          class="btn btn-primary w-full py-3 text-lg rounded-lg bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300 transition ease-in-out duration-300"
        >
          Register
        </button>
      </div>

      <!-- Login Link -->
      <div class="text-sm text-gray-400 text-center">
        <p>
          Already have an account?
          <a href="/pages/login" class="text-blue-400 hover:underline"
            >Login here</a
          >
        </p>
      </div>
    </form>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
